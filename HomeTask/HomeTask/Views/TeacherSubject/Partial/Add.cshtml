@model HomeTask.Core.ViewModels.SubjectViewModel
@using (Html.BeginForm("Add", "TeacherSubject", FormMethod.Post, new { @class = "submit-form" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
            &times;</button>
        <h3>
            Добавить предмет</h3>
    </div>
    <div class="modal-body">
        <div class="form-horizontal">
            <div class="control-group">
                @Html.LabelFor(x => x.Name)
                <div class="controls">
                    @Html.TextBoxFor(x => x.Name)
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <input type="submit" value="Сохранить" class="btn btn-primary"/> <a href="#" class="btn close-modal-window">
            Закрыть</a>
    </div>
}