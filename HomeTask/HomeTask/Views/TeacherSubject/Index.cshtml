@model HomeTask.Core.ViewModels.SubjectListViewModel

@{
    Layout = "~/Views/Shared/Layout/_Layout.cshtml";
}
@section header
{
    
}
<legend>Вы преподаете предметы</legend>
<a href="@Url.Action("Add", "TeacherSubject")" class="btn btn-primary modal-window-renderer">Добавить предмет</a>
<table class="table table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>@Html.LabelFor(x => x.SubjectViewModels.FirstOrDefault().Name)</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @{ var index = 0;}
        @foreach (var subject in Model.ElementsForPage)
        {
            index++;
            <tr>
                <td>@index</td>
                <td>
                    @subject.Name
                </td>
                <td>
                    <a href="@Url.Action("DeleteSubject2Teacher", "TeacherSubject", new { subjectID = subject.ID })" class="btn btn-danger modal-window-renderer">Удалить из списка</a>
                </td>
            </tr>
        }
    </tbody>
</table>