@model IEnumerable<HomeTask.Core.ViewModels.InstitutionViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout/_Layout.cshtml";
}
<div class="span5">
    <a href="@Url.Action("Add", "AdministratorInstitutes")" class="btn btn-primary modal-window-renderer">Добавить</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    #
                </th>
                <th>
                    Название
                </th>
                <th>
                    Действия
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 0;
            }
            @foreach (var institute in Model)
            {
                i++;
                <tr>
                    <td>@i</td> 
                    <td>@institute.Name</td> 
                    <td><a href="@Url.Action("Edit", "AdministratorInstitutes", new { instituteId = institute.Id })" class="btn btn-primary">Редактировать</a></td> 
                </tr>
            }
        </tbody>
    </table>
</div>
