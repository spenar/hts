@model HomeTask.Core.ViewModels.UserViewModel
@using (Html.BeginForm("LogOn", "Account", FormMethod.Post, new {@class = "form-horizontal"}))
{
    <div class="control-group">
        <div class="controls">
            <h1>Вход</h1>
        </div>
    </div>
    <p class="text-error">@Html.ValidationSummary(true);</p>

    <div class="control-group">
        @Html.LabelFor(x => x.Username, new { @class = "control-label" })
        <div class="controls">
            @Html.TextBoxFor(x => x.Username)
        </div>
    </div>
    <div class="control-group">
        @Html.LabelFor(x => x.Password, new { @class = "control-label" })
        <div class="controls">
            @Html.PasswordFor(x => x.Password)
        </div>
    </div>
    <div class="control-group">
        <div class="controls">
            <label class="checkbox">
                <input type="checkbox">Запомнить меня
            </label>
            <button type="submit" class="btn btn-success">Войти</button>
            @Html.ActionLink("Регистрация", "SelectOfRole", "Account", null,new { @class = "btn btn-primary" })
        </div>
    </div>
}